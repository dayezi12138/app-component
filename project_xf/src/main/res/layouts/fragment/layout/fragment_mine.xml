<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/widget_margin_tiny"
        android:background="@color/white"
        android:minHeight="200dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/widget_margin_tiny"
            app:cardBackgroundColor="#009DD9"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:contentPadding="@dimen/widget_margin_normal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="张三"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_large_sp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="杭州销帮信息科技有限公司"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_large_sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CEO"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_large_sp" />
                    </LinearLayout>

                    <com.shehuan.niv.NiceImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@color/white"
                        app:is_circle="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/qcrode_img"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_qrcode" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <!--<include layout="@layout/common_line" />-->

    <LinearLayout
        style="@style/LinearLayout.MineFragment.Line.Style"
        android:layout_marginTop="@dimen/divider"
        android:background="@drawable/ripper_friend_operation"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="客服帮助"
            android:textColor="@color/fragment_mine_line_text_color"
            android:textSize="@dimen/font_large_sp" />

        <include layout="@layout/view_forward"></include>
    </LinearLayout>

    <!--<include layout="@layout/common_line" />-->

    <LinearLayout
        android:id="@+id/setting_ly"
        style="@style/LinearLayout.MineFragment.Line.Style"
        android:layout_marginTop="@dimen/divider"
        android:background="@drawable/ripper_friend_operation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="@color/fragment_mine_line_text_color"
            android:textSize="@dimen/font_large_sp" />

        <include layout="@layout/view_forward" />
    </LinearLayout>

    <!--<include layout="@layout/common_line" />-->
</LinearLayout>
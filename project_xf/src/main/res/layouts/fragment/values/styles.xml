<resources>

    <style name="TextView" />

    <style name="LinearLayout" />

    <style name="TextView.MineFragment.Head.Content.Style" parent="TextView">
        <item name="android:textSize">@dimen/font_large_x_sp</item>
        <item name="android:textColor">#8EACD3</item>
    </style>

    <style name="TextView.MineFragment.Head.Title.Style" parent="TextView">
        <item name="android:textSize">@dimen/font_large_x_sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LinearLayout.MineFragment.Line.Style" parent="LinearLayout">
        <item name="android:paddingRight">@dimen/widget_padding_tiny</item>
        <item name="android:paddingLeft">@dimen/widget_padding_tiny</item>
        <item name="android:layout_height">@dimen/widget_text_height_normal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/ripper_line</item>
    </style>

    <style name="TextView.MineFragment.line.left.Style" parent="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/fragment_mine_line_text_color</item>
        <item name="android:textSize">@dimen/font_min_xx_sp</item>
    </style>
    <style name="TextView.MineFragment.line.right.Style" parent="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text3</item>
        <item name="android:textSize">@dimen/font_min_x_sp</item>
    </style>
</resources>

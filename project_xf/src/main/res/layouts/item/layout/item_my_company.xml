<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/text_item_title_height"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/widget_padding_tiny"
    android:paddingRight="@dimen/widget_padding_tiny">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="浙江XXXX信息科技有限公司"
        android:textColor="@color/text666"
        android:textSize="@dimen/font_min_xx_sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/widget_padding_tiny"
            android:src="@drawable/ic_vip" />
    </LinearLayout>

    <Button
        android:layout_width="80dp"
        android:layout_height="@dimen/widget_text_height_tiny"
        android:gravity="center"
        android:text="管理"
        android:textColor="@color/text1" />
</LinearLayout>
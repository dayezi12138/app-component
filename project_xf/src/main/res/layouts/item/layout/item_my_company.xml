<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/text_item_title_height"
    android:layout_marginTop="@dimen/divider"
    android:background="@drawable/ripper_friend_operation"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/widget_padding_tiny"
    android:paddingRight="@dimen/widget_padding_tiny">

    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="浙江XXXX信息科技有限公司"
        android:textColor="@color/fragment_mine_line_text_color"
        android:textSize="@dimen/font_min_xx_sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/vip_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_padding_tiny"
            android:src="@drawable/ic_vip" />
    </LinearLayout>

    <include layout="@layout/view_forward" />

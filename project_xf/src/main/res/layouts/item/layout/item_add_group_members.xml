<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_text_height_normal"
    android:layout_marginTop="@dimen/divider"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/widget_padding_tiny"
    android:paddingRight="@dimen/widget_padding_tiny">

    <ImageView
        android:id="@+id/img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_item_add_group_members_unselect" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/widget_padding_tiny"
        android:text="111"
        android:textColor="@color/text1"
        android:textSize="@dimen/font_large_sp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@drawable/ripper_friend_operation"
    android:orientation="vertical"
    android:paddingLeft="@dimen/widget_padding_normal">
    <!--android:background="@drawable/select_contact_item"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.shehuan.niv.NiceImageView
            android:id="@+id/img"
            android:layout_width="@dimen/widget_text_height_tiny"
            android:layout_height="@dimen/widget_text_height_tiny"
            android:layout_gravity="center_vertical"
            android:background="@color/b"
            app:is_circle="true" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/widget_padding_normal"
            tools:text="" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:background="@color/shadow"
        android:paddingLeft="@dimen/widget_padding_normal"
        android:paddingRight="@dimen/widget_padding_normal" />
</LinearLayout>
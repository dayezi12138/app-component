<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_contact_item"
    android:minHeight="@dimen/text_item_height"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/widget_padding_normal"
    android:paddingRight="@dimen/widget_padding_normal">

    <com.shehuan.niv.NiceImageView
        android:id="@+id/img"
        android:layout_width="@dimen/widget_text_height_tiny"
        android:layout_height="@dimen/widget_text_height_tiny"
        android:background="@drawable/rc_default_portrait"
        android:layout_gravity="center_vertical"
        app:is_circle="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/widget_margin_tiny"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/widget_padding_normal" />

        <TextView
            android:id="@+id/alias_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/widget_padding_normal"
            android:paddingTop="2dp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
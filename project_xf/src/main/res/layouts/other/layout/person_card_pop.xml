<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:padding="@dimen/widget_padding_normal">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/widget_margin_tiny"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
            android:orientation="vertical">

            <TextView
                android:id="@+id/qcrode_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_item_title_height"
                android:background="@drawable/ripper_friend_operation"
                android:gravity="center"
                android:text="扫一扫"
                android:textColor="@color/text1"
                android:textSize="@dimen/font_large_sp" />

            <TextView
                android:id="@+id/cancel_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_item_title_height"
                android:layout_marginTop="@dimen/divider"
                android:background="@drawable/ripper_friend_operation"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/text1"
                android:textSize="@dimen/font_large_sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
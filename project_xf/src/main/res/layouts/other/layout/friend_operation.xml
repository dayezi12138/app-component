<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_friend_operation"
    android:orientation="vertical">

    <TextView
        android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_text_height_normal"
        android:background="@drawable/ripper_friend_operation"
        android:gravity="center"
        android:text="删除好友"
        android:textColor="@color/d"
        android:textSize="@dimen/font_large_sp" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_text_height_normal"
        android:layout_marginTop="@dimen/divider"
        android:background="@drawable/ripper_friend_operation"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/colorStatusbar"
        android:textSize="@dimen/font_large_sp" />
</LinearLayout>
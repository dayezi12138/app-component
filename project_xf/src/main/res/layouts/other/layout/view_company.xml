<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical"
    android:padding="@dimen/widget_padding_normal">


    <Button
        android:id="@+id/sure_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rc_dimen_size_50"
        android:background="@drawable/riper_pop_btn"
        android:gravity="center"
        android:text="解除绑定"
        android:textColor="#EB4D3E" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rc_dimen_size_50"
        android:layout_marginTop="@dimen/widget_margin_tiny"
        android:background="@drawable/riper_pop_btn"
        android:gravity="center"
        android:text="取消"
        android:textColor="#3478F6" />
</LinearLayout>
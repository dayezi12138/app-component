<resources>

    <style name="act_login_btn_style">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">@dimen/widget_text_height_tiny</item>
        <item name="android:textSize">@dimen/font_min_x_sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="EditText">
        <item name="android:background">@null</item>
    </style>

    <style name="ExistBackgroundEditText"></style>

    <style name="EditText.Login.TextStyle" parent="EditText">
        <item name="android:textSize">@dimen/font_min_xx_sp</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:textColor">@color/textccc</item>
    </style>

    <style name="ExistBackgroundEditText.Create.Busi.TextStyle" parent="ExistBackgroundEditText">
        <item name="android:textSize">@dimen/font_large_sp</item>
        <item name="android:theme">@style/EditText_Focus_Theme</item>
        <item name="android:textColor">@color/text1</item>
    </style>

    <style name="EditText_Focus_Theme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/holo_gray</item>
        <item name="colorControlActivated">#00A0E9</item>
    </style>

    <style name="Activity" />

    <style name="Activity.Valid.Title.TextView.Style" parent="Activity">
        <item name="android:textSize">@dimen/font_large_x_sp_</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Activity.Line.Title.TextView.Style" parent="Activity">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_large_sp</item>
        <item name="android:textColor">@color/fragment_mine_line_text_color</item>
    </style>

    <style name="Activity.Line.Content.TextView.Style" parent="Activity">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/font_min_xx_sp</item>
        <item name="android:textColor">@color/fragment_mine_line_text_color</item>
    </style>

    <style name="Activity.Line.Content.padding.TextView.Style" parent="Activity.Line.Content.TextView.Style">
        <item name="android:paddingLeft">@dimen/widget_padding_normal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text2</item>
        <item name="android:textSize">@dimen/font_min_xx_sp</item>
    </style>
    <style name="Activity.Line.Content..Not.Weight.padding.TextView.Style" parent="Activity.Line.Content.TextView.Style">
        <item name="android:paddingLeft">@dimen/widget_padding_normal</item>
        <item name="android:textColor">@color/text2</item>
        <item name="android:textSize">@dimen/font_min_x_sp</item>
    </style>
    <style name="Activity.Line.Title.Not.Weight.TextView.Style" parent="Activity">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:textSize">@dimen/font_min_xx_sp</item>
        <item name="android:textColor">@color/fragment_mine_line_text_color</item>
    </style>
</resources>

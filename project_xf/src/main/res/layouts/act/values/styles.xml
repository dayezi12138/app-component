        <item name="android:layout_height">@dimen/widget_text_height_tiny</item>
        <item name="android:textSize">@dimen/font_min_x_sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="EditText">
        <item name="android:background">@null</item>
    </style>
    <style name="ExistBackgroundEditText">
    </style>

    <style name="EditText.Login.TextStyle" parent="EditText">
        <item name="android:textSize">@dimen/font_min_xx_sp</item>
        <item name="android:textColorHint">@color/text_hint_color</item>
        <item name="android:textColor">@color/textccc</item>
    </style>
    <style name="ExistBackgroundEditText.Create.Busi.TextStyle" parent="ExistBackgroundEditText">
        <item name="android:textSize">@dimen/font_large_sp</item>
        <item name="android:theme">@style/EditText_Focus_Theme</item>

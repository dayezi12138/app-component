<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/company_ly"
        style="@style/LinearLayout.MineFragment.Line.Style"
        android:layout_marginTop="@dimen/widget_margin_normal"
        android:background="@drawable/ripper_friend_operation">

        <TextView
            style="@style/Activity.Line.Title.TextView.Style"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="企业全称" />

        <TextView
            android:id="@+id/companyfull_tv"
            style="@style/Activity.Line.Content.TextView.Style"

       />

    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayout.MineFragment.Line.Style"
        android:layout_marginTop="@dimen/divider"
        android:background="@drawable/ripper_friend_operation">

        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            style="@style/Activity.Line.Title.TextView.Style"
            android:text="企业简称" />

        <TextView
            android:id="@+id/companyeasy_tv"
            style="@style/Activity.Line.Content.TextView.Style" />

    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayout.MineFragment.Line.Style"
        android:layout_marginTop="@dimen/divider"
        android:background="@drawable/ripper_friend_operation">

        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            style="@style/Activity.Line.Title.TextView.Style"
            android:text="创建人" />

        <TextView
            android:id="@+id/founder_tv"
            style="@style/Activity.Line.Content.TextView.Style" />
    </LinearLayout>


</LinearLayout>
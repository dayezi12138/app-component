<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include
        layout="@layout/search_view_1"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="@dimen/widget_margin_tiny"
        android:layout_marginTop="@dimen/widget_margin_normal"
        android:layout_marginRight="@dimen/widget_margin_tiny"
        android:layout_marginBottom="@dimen/widget_margin_normal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/scan_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="@dimen/widget_margin_large_xx"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:src="@drawable/ic_bar_code" />

        <include layout="@layout/recycler_" />
    </FrameLayout>
</LinearLayout>
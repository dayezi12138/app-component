<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/widget_padding_normal"
        android:text="详细"
        android:textColor="@color/text1"
        android:textSize="@dimen/font_large_x_sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/widget_padding_normal"
        android:text="Content"
        android:textColor="@color/text1"
        android:textSize="@dimen/font_large_sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:paddingLeft="@dimen/widget_padding_normal"
        android:paddingRight="@dimen/widget_padding_normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="该话题有帮助吗?"
            android:textColor="@color/text333"
            android:textSize="@dimen/font_large_x_sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:layout_width="60dp"
                android:layout_height="@dimen/widget_text_height_tiny"
                android:background="@drawable/shape_help_detail_btn"
                android:text="是"
                android:textColor="@color/text1"
                android:textSize="@dimen/font_min_xx_sp" />

            <Button
                android:layout_width="60dp"
                android:layout_height="@dimen/widget_text_height_tiny"
                android:layout_marginLeft="@dimen/widget_margin_normal"
                android:background="@drawable/shape_help_detail_btn"
                android:text="否"
                android:textColor="@color/text1"
                android:textSize="@dimen/font_min_xx_sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
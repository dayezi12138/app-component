<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_text_height_normal"
        android:layout_marginTop="@dimen/widget_margin_tiny"
        android:background="@color/white"
        android:paddingLeft="@dimen/widget_padding_tiny"
        android:paddingRight="@dimen/widget_padding_tiny">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/widget_margin_tiny"
            android:gravity="center_vertical"
            android:text="原密码: "
            android:textColor="@color/text1"
            android:textSize="@dimen/font_large_sp" />

        <EditText
            android:id="@+id/old_password_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="请输入旧密码"
            android:textColor="@color/text1"
            android:textSize="@dimen/font_large_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_text_height_normal"
        android:layout_marginTop="@dimen/divider"
        android:background="@color/white"
        android:paddingLeft="@dimen/widget_padding_tiny"
        android:paddingRight="@dimen/widget_padding_tiny">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/widget_margin_tiny"
            android:gravity="center_vertical"
            android:text="新密码: "
            android:textColor="@color/text1"
            android:textSize="@dimen/font_large_sp" />

        <EditText
            android:id="@+id/new_password1_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="请输入新密码"
            android:textColor="@color/text1"
            android:textSize="@dimen/font_large_sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_text_height_normal"
        android:layout_marginTop="@dimen/divider"
        android:background="@color/white"
        android:paddingLeft="@dimen/widget_padding_tiny"
        android:paddingRight="@dimen/widget_padding_tiny">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/widget_margin_tiny"
            android:gravity="center_vertical"
            android:text="新密码: "
            android:textColor="@color/text1"
            android:textSize="@dimen/font_large_sp" />

        <EditText
            android:id="@+id/new_password2_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="在输入一次密码"
            android:textColor="@color/text1"
            android:textSize="@dimen/font_large_sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_text_height_normal"
        android:layout_marginTop="@dimen/widget_margin_normal"
        android:background="@drawable/ripper_friend_operation"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/text1"
        android:textSize="@dimen/font_large_sp" />
</LinearLayout>
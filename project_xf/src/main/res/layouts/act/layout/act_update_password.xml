<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_text_height_normal"
        android:layout_marginTop="@dimen/widget_margin_tiny"
        android:background="@color/white"
        android:paddingLeft="@dimen/widget_padding_tiny"
        android:paddingRight="@dimen/widget_padding_tiny"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/widget_margin_tiny"
            android:gravity="center_vertical"
            android:minWidth="80dp"
            android:text="旧密码: "
            android:textColor="@color/text1"
            android:textSize="@dimen/font_large_sp" />

        <EditText
            android:id="@+id/old_password_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="请填写旧密码"
            android:textColor="@color/text1"
            android:textSize="@dimen/font_large_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_text_height_normal"
        android:layout_marginTop="@dimen/divider"
        android:background="@color/white"
        android:paddingLeft="@dimen/widget_padding_tiny"
        android:paddingRight="@dimen/widget_padding_tiny">

        <TextView
            style="@style/Activity.Line.Title.Not.Weight.TextView.Style"
            android:text="新密码: " />

        <EditText
            android:id="@+id/new_password1_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="请填写新密码"
            android:background="@null"
            android:textColor="@color/update_phone_text_color"
            android:textColorHint="#CFCFD1"
            android:textSize="@dimen/font_min_xx_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_text_height_normal"
        android:layout_marginTop="@dimen/divider"
        android:background="@color/white"
        android:paddingLeft="@dimen/widget_padding_tiny"
        android:paddingRight="@dimen/widget_padding_tiny">

        <TextView
            style="@style/Activity.Line.Title.Not.Weight.TextView.Style"
            android:text="确认密码: " />

        <EditText
            android:id="@+id/new_password2_et"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:hint="请确认新密码"
            android:background="@null"
            android:textColor="@color/update_phone_text_color"
            android:textColorHint="#CFCFD1"
            android:textSize="@dimen/font_min_xx_sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_margin_normal"
        android:padding="@dimen/widget_padding_tiny"
        android:text="密码至少8个字符，并且同时包含数字和字母"
        android:textColor="#B0B0B0"
        android:textSize="@dimen/font_min_x_sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/widget_padding_tiny"
        android:text="忘记密码?"
        android:textColor="@color/text666"
        android:textSize="@dimen/font_min_x_sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_text_height_normal"
        android:layout_marginTop="@dimen/widget_margin_normal"
        android:background="@drawable/ripper_friend_operation"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/text1"
        android:textSize="@dimen/font_large_sp"
        android:visibility="gone" />
</LinearLayout>
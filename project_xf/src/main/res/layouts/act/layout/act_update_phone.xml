<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_margin_normal"
        android:paddingLeft="@dimen/widget_padding_normal"
        android:text="更换手机后，下次登录可使用新手机号登录。"
        android:textColor="@color/text999"
        android:textSize="@dimen/font_min_x_sp" />

    <TextView
        android:id="@+id/mobile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/widget_padding_normal"
        android:textColor="@color/update_phone_text_color"
        android:textSize="@dimen/font_min_x_sp" />
    <EditText
        android:id="@+id/text_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_item_title_height"
        android:layout_marginTop="@dimen/widget_margin_normal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="请填写新的手机号码"
        android:inputType="text"
        android:maxLength="11"
        android:paddingLeft="@dimen/widget_padding_large"
        android:textColor="@color/update_phone_text_color"
        android:textColorHint="#CFCFD1"
        android:textSize="@dimen/font_min_xx_sp" />
</LinearLayout>
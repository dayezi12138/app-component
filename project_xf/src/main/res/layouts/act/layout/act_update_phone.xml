<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_margin_normal"
        android:paddingLeft="@dimen/widget_padding_normal"
        android:text="更换手机后，下次登录可使用新手机号登录"
        android:textColor="@color/text333"
        android:textSize="@dimen/font_min_xx_sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/widget_padding_normal"
        android:text="当前手机号: 15432421342"
        android:textColor="@color/text333"
        android:textSize="@dimen/font_min_xx_sp" />

    <EditText
        android:id="@+id/text_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_item_title_height"
        android:layout_marginTop="@dimen/widget_margin_normal"
        android:gravity="center_vertical"
        android:hint="请填写新的手机号码"
        android:inputType="text"
        android:paddingLeft="@dimen/widget_padding_large"
        android:textColor="@color/text1"
        android:textSize="@dimen/font_large_sp" />
</LinearLayout>
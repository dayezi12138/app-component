<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <include layout="@layout/common_line" />

    <LinearLayout
        android:id="@+id/setting_ly"
        style="@style/LinearLayout.MineFragment.Line.Style"
        android:layout_marginTop="@dimen/divider"
        android:background="@drawable/ripper_friend_operation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="账户与安全"
            android:textColor="@color/fragment_mine_line_text_color"
            android:textSize="@dimen/font_large_sp" />

        <include layout="@layout/view_forward"></include>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_company_ly"
        style="@style/LinearLayout.MineFragment.Line.Style"
        android:layout_marginTop="@dimen/widget_margin_tiny"
        android:background="@drawable/ripper_friend_operation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="我的企业"
            android:textColor="@color/fragment_mine_line_text_color"
            android:textSize="@dimen/font_large_sp" />

        <include layout="@layout/view_forward"></include>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/help_ly"
        style="@style/LinearLayout.MineFragment.Line.Style"
        android:layout_marginTop="@dimen/widget_margin_tiny"
        android:background="@drawable/ripper_friend_operation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="帮助与反馈"
            android:textColor="@color/fragment_mine_line_text_color"
            android:textSize="@dimen/font_large_sp" />

        <include layout="@layout/view_forward"></include>
    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayout.MineFragment.Line.Style"
        android:layout_marginTop="@dimen/divider"
        android:background="@drawable/ripper_friend_operation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="关于销副总"
            android:textColor="@color/fragment_mine_line_text_color"
            android:textSize="@dimen/font_large_sp" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="版本1.0.0"
            android:textColor="@color/fragment_mine_line_text_color"
            android:textSize="@dimen/font_min_xx_sp" />

        <include layout="@layout/view_forward"></include>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/clear_ly"
        style="@style/LinearLayout.MineFragment.Line.Style"
        android:layout_marginTop="@dimen/widget_margin_tiny"
        android:background="@drawable/ripper_friend_operation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="清除缓存"
            android:textColor="@color/fragment_mine_line_text_color"
            android:textSize="@dimen/font_large_sp" />

        <TextView
            android:id="@+id/clear_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.8M"
            android:textColor="@color/fragment_mine_line_text_color"
            android:textSize="@dimen/font_min_xx_sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/switch_account_tv"
        style="@style/LinearLayout.MineFragment.Line.Style"
        android:layout_marginTop="@dimen/widget_margin_tiny"
        android:background="@drawable/ripper_friend_operation"
        android:gravity="center"
        android:text="切换账号"
        android:textColor="@color/fragment_mine_line_text_color"
        android:textSize="@dimen/font_large_sp" />

    <TextView
        android:id="@+id/logout"
        style="@style/LinearLayout.MineFragment.Line.Style"
        android:layout_marginTop="@dimen/widget_margin_tiny"
        android:background="@drawable/ripper_friend_operation"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/fragment_mine_line_text_color"
        android:textSize="@dimen/font_large_sp" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OrderLineLayout">
        <attr name="leftText" format="string" />
        <attr name="leftTextAppearance" format="reference" />
        <attr name="addRightView" format="reference" />
        <attr name="visibleRightTextView" format="boolean" />
        <attr name="rightView_match_parent" format="boolean" />
    </declare-styleable>

    <declare-styleable name="FormLineLayout">
        <attr name="leftTextStr" format="string" />
        <attr name="leftTextSize" format="dimension" />
        <attr name="leftTextColor" format="color" />
    </declare-styleable>
    <declare-styleable name="MultipleStatusView">
        <attr name="loadingView" format="reference" />
        <attr name="errorView" format="reference" />
        <attr name="emptyView" format="reference" />
        <attr name="toolbarView" format="reference" />
        <attr name="contentView" format="reference" />
    </declare-styleable>

    <declare-styleable name="VerifyCodeView">

        <attr name="vcTextColor" format="color|reference"/>
        <attr name="vcTextCount" format="integer"/>
        <attr name="vcTextSize" format="dimension|reference"/>
        <attr name="vcDividerWidth" format="dimension|reference"/>
        <attr name="vcTextFont" format="string|reference"/>
        <attr name="vcWrapper" format="enum">
            <enum name="underLine" value="0"/>
            <enum name="centerLine" value="1"/>
            <enum name="square" value="2"/>
            <enum name="circle" value="3"/>
        </attr>
        <attr name="vcWrapperColor" format="color|reference"/>
        <attr name="vcNextWrapperColor" format="color|reference"/>
        <attr name="vcWrapperStrokeWidth" format="dimension|reference"/>
    </declare-styleable>
</resources>
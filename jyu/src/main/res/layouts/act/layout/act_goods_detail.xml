<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <com.rairmmd.boundscrollview.BoundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/widget_margin_large"
                android:orientation="vertical">

                <core.app.zh.com.core.view.FormLineLayout
                    style="@style/common_form_line_style"
                    android:visibility="gone"
                    app:leftTextStr="订单编号">

                    <include
                        android:id="@+id/tradeNos_tv"
                        layout="@layout/form_text" />
                </core.app.zh.com.core.view.FormLineLayout>

                <core.app.zh.com.core.view.FormLineLayout
                    style="@style/common_form_line_style"
                    app:leftTextStr="生产单号">

                    <include
                        android:id="@+id/produce_tv"
                        layout="@layout/form_text" />
                </core.app.zh.com.core.view.FormLineLayout>

                <core.app.zh.com.core.view.FormLineLayout
                    style="@style/common_form_line_style"
                    app:leftTextStr="计划编号">

                    <include
                        android:id="@+id/plan_no_tv"
                        layout="@layout/form_text" />
                </core.app.zh.com.core.view.FormLineLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/widget_margin_large"
                android:orientation="vertical">

                <core.app.zh.com.core.view.FormLineLayout
                    style="@style/common_form_line_style"
                    app:leftTextStr="制单时间">

                    <include
                        android:id="@+id/create_time_tv"
                        layout="@layout/form_text" />
                </core.app.zh.com.core.view.FormLineLayout>

                <core.app.zh.com.core.view.FormLineLayout
                    style="@style/common_form_line_style"
                    app:leftTextStr="交货时间">

                    <include
                        android:id="@+id/pre_tv"
                        layout="@layout/form_text" />
                </core.app.zh.com.core.view.FormLineLayout>

                <core.app.zh.com.core.view.FormLineLayout
                    style="@style/common_form_line_style"
                    app:leftTextStr="状态">

                    <include
                        android:id="@+id/status_tv"
                        layout="@layout/form_text" />
                </core.app.zh.com.core.view.FormLineLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/widget_margin_large"
                android:orientation="vertical">

                <core.app.zh.com.core.view.FormLineLayout
                    style="@style/common_form_line_style"
                    app:leftTextStr="货品">

                    <include
                        android:id="@+id/good_name_tv"
                        layout="@layout/form_text" />
                </core.app.zh.com.core.view.FormLineLayout>

                <core.app.zh.com.core.view.FormLineLayout
                    style="@style/common_form_line_style"
                    app:leftTextStr="规格">

                    <include
                        android:id="@+id/specs_tv"
                        layout="@layout/form_text" />
                </core.app.zh.com.core.view.FormLineLayout>

                <core.app.zh.com.core.view.FormLineLayout
                    style="@style/common_form_line_style"
                    app:leftTextStr="目标产量">

                    <include
                        android:id="@+id/count_tv"
                        layout="@layout/form_text" />
                </core.app.zh.com.core.view.FormLineLayout>

                <core.app.zh.com.core.view.FormLineLayout
                    style="@style/common_form_line_style"
                    app:leftTextStr="件数">

                    <include
                        android:id="@+id/pack_count_tv"
                        layout="@layout/form_text" />
                </core.app.zh.com.core.view.FormLineLayout>

                <core.app.zh.com.core.view.FormLineLayout
                    style="@style/common_form_line_style"
                    app:leftTextStr="米数">

                    <include
                        android:id="@+id/ca_tv"
                        layout="@layout/form_text" />
                </core.app.zh.com.core.view.FormLineLayout>

                <core.app.zh.com.core.view.FormLineLayout
                    style="@style/common_form_line_style"
                    app:leftTextStr="换算率">

                    <include
                        android:id="@+id/rate_tv"
                        layout="@layout/form_text" />
                </core.app.zh.com.core.view.FormLineLayout>
            </LinearLayout>

            <include layout="@layout/common_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/widget_margin_normal"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/text_line_space"
                android:paddingTop="@dimen/widget_padding_tiny"
                android:paddingBottom="@dimen/widget_padding_tiny"
                android:text="@string/act_craft_detail_pic_str"
                android:textColor="@color/text2"
                android:textSize="@dimen/font_large_sp" />

            <LinearLayout
                android:id="@+id/imgage_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgage_iv"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center" />
            </LinearLayout>

            <include layout="@layout/common_line" />

        </LinearLayout>
    </com.rairmmd.boundscrollview.BoundScrollView>
</LinearLayout>
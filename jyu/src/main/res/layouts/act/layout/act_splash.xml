<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <zh.com.jyu.views.pine.PinnedHeaderRecyclerView
        android:id="@+id/recycler_order_list"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layer_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/widget_text_height_normal"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/bottom_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/version_str"
                android:textAppearance="@style/version_text_style" />

            <TextView
                android:id="@+id/version_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/widget_padding_tiny"
                android:textAppearance="@style/version_text_style" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.rairmmd.boundscrollview.BoundScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_margin_large"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <include layout="@layout/common_line" />

                    <core.app.zh.com.core.view.FormLineLayout
                        android:id="@+id/order_num_ly"
                        style="@style/common_form_line_style"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:leftTextStr="@string/act_craft_detail_order_num_str">

                        <include
                            android:id="@+id/order_num_tv"
                            layout="@layout/form_text"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <include layout="@layout/forward_iv" />
                    </core.app.zh.com.core.view.FormLineLayout>

                    <include layout="@layout/common_line" />

                    <core.app.zh.com.core.view.FormLineLayout
                        style="@style/common_form_line_style"
                        app:leftTextStr="@string/act_craft_detail_goods_name_str">

                        <include
                            android:id="@+id/goods_name_tv"
                            layout="@layout/form_text" />
                    </core.app.zh.com.core.view.FormLineLayout>

                    <include layout="@layout/common_line" />

                    <core.app.zh.com.core.view.FormLineLayout
                        style="@style/common_form_line_style"
                        app:leftTextStr="@string/act_craft_detail_specs_str">

                        <include
                            android:id="@+id/space_name_tv"
                            layout="@layout/form_text" />
                    </core.app.zh.com.core.view.FormLineLayout>

                    <include layout="@layout/common_line" />

                    <core.app.zh.com.core.view.FormLineLayout
                        style="@style/common_form_line_style"
                        app:leftTextStr="@string/act_craft_detail_name_str">

                        <include
                            android:id="@+id/name_tv"
                            layout="@layout/form_text" />
                    </core.app.zh.com.core.view.FormLineLayout>

                    <include layout="@layout/common_line" />

                    <core.app.zh.com.core.view.FormLineLayout
                        style="@style/common_form_line_style"
                        app:leftTextStr="@string/act_craft_detail_target_count_str">

                        <include
                            android:id="@+id/count_tv"
                            layout="@layout/form_text" />
                    </core.app.zh.com.core.view.FormLineLayout>

                    <include layout="@layout/common_line" />

                    <core.app.zh.com.core.view.FormLineLayout
                        style="@style/common_form_line_style"
                        app:leftTextStr="长度">

                        <include
                            android:id="@+id/length_tv"
                            layout="@layout/form_text" />
                    </core.app.zh.com.core.view.FormLineLayout>

                    <include layout="@layout/common_line" />

                    <core.app.zh.com.core.view.FormLineLayout
                        style="@style/common_form_line_style"
                        app:leftTextStr="@string/act_craft_detail_reported_count_str">

                        <include
                            android:id="@+id/pack_count_tv"
                            layout="@layout/form_text" />
                    </core.app.zh.com.core.view.FormLineLayout>

                    <include layout="@layout/common_line" />

                    <core.app.zh.com.core.view.FormLineLayout
                        style="@style/common_form_line_style"
                        app:leftTextStr="@string/act_craft_detail_status_str">

                        <include
                            android:id="@+id/status_tv"
                            layout="@layout/form_text" />
                    </core.app.zh.com.core.view.FormLineLayout>

                    <include layout="@layout/common_line" />

                    <core.app.zh.com.core.view.FormLineLayout
                        android:id="@+id/account_fl"
                        style="@style/common_form_line_style"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:leftTextStr="@string/act_craft_detail_group_str">

                        <TextView
                            android:id="@+id/accounts_tv"
                            style="@style/act_good_detail_form_line_text_style"
                            android:layout_weight="1" />
                    </core.app.zh.com.core.view.FormLineLayout>

                    <include layout="@layout/common_line" />

                    <core.app.zh.com.core.view.FormLineLayout
                        style="@style/common_form_line_style"
                        app:leftTextStr="@string/act_craft_detail_first_report_str">

                        <include
                            android:id="@+id/first_time_tv"
                            layout="@layout/form_text" />
                    </core.app.zh.com.core.view.FormLineLayout>

                    <include layout="@layout/common_line" />

                    <core.app.zh.com.core.view.FormLineLayout
                        style="@style/common_form_line_style"
                        app:leftTextStr="@string/act_craft_detail_last_report_str">

                        <include
                            android:id="@+id/last_time_tv"
                            layout="@layout/form_text" />
                    </core.app.zh.com.core.view.FormLineLayout>

                    <include layout="@layout/common_line" />

                    <core.app.zh.com.core.view.FormLineLayout
                        style="@style/common_form_line_style"
                        app:leftTextStr="@string/act_craft_detail_pre_time_str">

                        <include
                            android:id="@+id/pre_time_tv"
                            layout="@layout/form_text" />
                    </core.app.zh.com.core.view.FormLineLayout>

                    <include layout="@layout/common_line" />

                    <core.app.zh.com.core.view.FormLineLayout
                        android:id="@+id/order_detail_fl"
                        style="@style/common_form_line_style"
                        app:leftTextStr="@string/act_craft_detail_create_time_str">

                        <TextView
                            android:id="@+id/create_time_tv"
                            style="@style/act_good_detail_form_line_text_style"
                            android:layout_weight="1" />
                    </core.app.zh.com.core.view.FormLineLayout>
                </LinearLayout>

                <include layout="@layout/common_line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_margin_normal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/text_line_space"
                    android:paddingTop="@dimen/widget_padding_tiny"
                    android:paddingBottom="@dimen/widget_padding_tiny"
                    android:text="@string/act_craft_detail_pic_str"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/font_large_sp" />

                <LinearLayout
                    android:id="@+id/imgage_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgage_iv"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center" />
                </LinearLayout>

                <include layout="@layout/common_line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_margin_normal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/text_line_space"
                    android:paddingTop="@dimen/widget_padding_tiny"
                    android:paddingBottom="@dimen/widget_padding_tiny"
                    android:text="@string/act_craft_detail_command_str"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/font_large_sp" />

                <LinearLayout
                    android:id="@+id/command_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/command_imgage_iv"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center" />
                </LinearLayout>

                <include layout="@layout/common_line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/widget_margin_normal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/text_line_space"
                    android:paddingTop="@dimen/widget_padding_tiny"
                    android:paddingBottom="@dimen/widget_padding_tiny"
                    android:text="@string/act_craft_detail_command_str"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/font_large_sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants">

                        <include
                            android:id="@+id/recycler"
                            layout="@layout/recycler_" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </com.rairmmd.boundscrollview.BoundScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_text_height_normal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/widget_margin_tiny"
            android:background="@color/white">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/submit_btn"
                style="@style/login_btn_style"
                android:layout_margin="@dimen/widget_margin_large"
                android:layout_weight="1"
                android:background="@drawable/ripper_blue_btn"
                android:text="@string/act_craft_detail_report_history_str"
                android:textColor="@color/white" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/add_report_btn"
                style="@style/login_btn_style"
                android:layout_margin="@dimen/widget_margin_large"
                android:layout_weight="1"
                android:background="@drawable/ripper_blue_btn"
                android:text="@string/act_craft_detail_add_report_str"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/widget_margin_tiny"
    android:layout_marginTop="@dimen/widget_margin_tiny"
    android:id="@+id/ly"
    android:layout_marginRight="@dimen/widget_margin_tiny"
    android:background="@drawable/act_item_n_bulletin"
    android:orientation="vertical"
    android:padding="@dimen/widget_padding_tiny">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生产计划编号:"
            android:textColor="@color/text1"
            android:textSize="@dimen/font_min_x_sp" />

        <TextView
            android:id="@+id/plan_no_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/text1"
            android:textSize="@dimen/font_min_x_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称:"
            android:textColor="@color/text1"
            android:textSize="@dimen/font_min_x_sp" />

        <TextView
            android:id="@+id/good_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/text1"
            android:textSize="@dimen/font_min_x_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实际产量:"
            android:textColor="@color/text1"
            android:textSize="@dimen/font_min_x_sp" />

        <TextView
            android:id="@+id/real_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/text1"
            android:textSize="@dimen/font_min_x_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已汇报量:"
            android:textColor="@color/text1"
            android:textSize="@dimen/font_min_x_sp" />

        <TextView
            android:id="@+id/report_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/text1"
            android:textSize="@dimen/font_min_x_sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="汇报时间:"
            android:textColor="@color/text1"
            android:textSize="@dimen/font_min_x_sp" />

        <TextView
            android:id="@+id/report_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/text1"
            android:textSize="@dimen/font_min_x_sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交接时差:"
            android:textColor="@color/text1"
            android:textSize="@dimen/font_min_x_sp" />

        <TextView
            android:id="@+id/create_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textColor="@color/text1"
            android:textSize="@dimen/font_min_x_sp" />

    </LinearLayout>
</LinearLayout>
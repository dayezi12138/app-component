<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/item_padding_l_and_r_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/divider"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="班组: "
                android:textColor="@color/text1"
                android:textSize="@dimen/font_min_xx_sp" />

            <TextView
                android:id="@+id/name_tv"
                style="@style/item_report_list_text_style"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/widget_padding_tiny"
                android:textColor="@color/text1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_text_height_tiny"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="是否启用: "
                android:textColor="@color/text1"
                android:textSize="@dimen/font_min_xx_sp" />

            <TextView
                android:id="@+id/is_open_tv"
                style="@style/item_report_list_text_style"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/widget_padding_tiny"
                android:textColor="@color/text1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_text_height_tiny">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="成员: "
                android:textColor="@color/text1"
                android:textSize="@dimen/font_min_xx_sp" />

            <TextView
                android:id="@+id/member_tv"
                style="@style/item_report_list_text_style"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/widget_padding_tiny"
                android:textColor="@color/text1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_text_height_tiny"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="创建时间: "
                android:textColor="@color/text1"
                android:textSize="@dimen/font_min_xx_sp" />

            <TextView
                android:id="@+id/produce_tv"
                style="@style/item_report_list_text_style"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/widget_padding_tiny"
                android:textColor="@color/text1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="备注: "
                android:textColor="@color/text1"
                android:textSize="@dimen/font_min_xx_sp" />

            <TextView
                android:id="@+id/memo_tv"
                style="@style/item_report_list_text_style"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/widget_padding_tiny"
                android:textColor="@color/text1" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
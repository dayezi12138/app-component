<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ly"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_line" />

    <LinearLayout
        style="@style/item_padding_l_and_r_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_item_title_height">

        <ImageView
            android:id="@+id/imgage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_arrow_expanding" />

        <TextView
            android:id="@+id/text_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_min_xx_sp" />

        <TextView
            android:id="@+id/count_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_min_x_sp" />
    </LinearLayout>

    <include layout="@layout/common_line" />
</LinearLayout>
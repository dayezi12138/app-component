<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_item"
    style="@style/PaddingStyle.Left.Right.CommonPadding.Style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?android:attr/selectableItemBackground"
    android:minHeight="@dimen/widget_text_height_normal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="3dp">

        <TextView
            android:id="@+id/plan_no_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text1"
            android:textSize="@dimen/font_min_x_sp" />

        <TextView
            android:id="@+id/remark_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:textColor="@color/text2"
            android:textSize="@dimen/font_min_sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/create_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:textColor="@color/text2"
            android:textSize="@dimen/font_min_sp" />
    </LinearLayout>

    <Button
        android:id="@+id/select_btn"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/widget_margin_tiny"
        android:background="@drawable/shape_blue_btn_5"
        android:gravity="center"
        android:text="查看"
        android:textColor="@color/white"
        android:textSize="@dimen/font_min_x_sp" />
</LinearLayout>
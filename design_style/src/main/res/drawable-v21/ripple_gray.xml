<?xml version="1.0" encoding="utf-8"?><!--Android API21及以上引入了控件点击的水波纹效果-->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/holo_gray">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /><!-- 背景填充颜色 -->
            <stroke
                android:width="1dp"
                android:color="@color/shadow" /><!-- 描边，边框宽度、颜色 -->
            <corners android:radius="20dp" /><!-- 边角圆弧的半径 -->
        </shape>
    </item>
</ripple>